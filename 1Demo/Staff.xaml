<Window x:Class="_1Demo.Staff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1Demo"
        mc:Ignorable="d"
        Title="Товары" Height="450" Width="800" FontFamily="Times New Roman">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="find" Grid.Column="0" TextChanged="find_TextChanged"></TextBox>
            <ComboBox x:Name="sortComboBox"
                      Grid.Column="1"
                      SelectionChanged="sortComboBox_SelectionChanged">
                <ComboBoxItem Content="По кол-ву (возр.)" Tag="count_asc"/>
                <ComboBoxItem Content="По кол-ву (убыв.)" Tag="count_desc"/>
            </ComboBox>
            <ComboBox x:Name="sortByManufacturerCB" Grid.Column="2" SelectionChanged="sortByManufacturerCB_SelectionChanged">
            </ComboBox>

        </Grid>
        <Button x:Name="Back" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Назад" Height="20" Width="50" Grid.Column="2" Click="Back_Click"/>
        <TextBlock x:Name="loginName" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <StackPanel x:Name="stackPanel" Background="Chartreuse" ></StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
