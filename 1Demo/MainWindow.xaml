<Window x:Name="LoginForm" x:Class="_1Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1Demo"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" FontFamily="Times New Roman" Icon="/icons/Icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" Source="/photoes/Icon.png" Width="103"/>
        <TextBlock Grid.Row="1" Text="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Login" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="199,0,200,0"/>
        <TextBlock Grid.Row="3" Text="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="Password" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="199,0,200,0"/>
        <Button x:Name="Enter" Grid.Row="5" Grid.Column="1" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Width="100" Click="Enter_Click" Margin="10,0,0,0" />
        
        <Button x:Name="Guest" Grid.Row="5" Grid.Column="0" Content="Guest" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="100" HorizontalContentAlignment="Center" Margin="0,0,10,0" Click="Guest_Click"/>
    </Grid>
</Window>
